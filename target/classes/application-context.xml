<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean name="add" class="com.my.spring.model.Address">
    	<property name="city" value="Noida"/>  
    	<property name="state" value="up"/>
    </bean>
    
    <bean id="emp1"  class="com.my.spring.model.Employee">	
    	<property name="id" value="10011"/>
    	<property name="name" value="Vikas"/>
   		<property name="gender" value="Male"/>
   		<property name="Address" ref="add"/>
    </bean>
    
 
    
   <bean name="emp2"  class="com.my.spring.model.Employee">	
    	<constructor-arg name="id" value="2311"/>
    	<constructor-arg name="name" value="Amit"/>
   		<constructor-arg name="gender" value="Male"/>
   		<constructor-arg name="address" ref="add"/>
    </bean> 
    
    

</beans>